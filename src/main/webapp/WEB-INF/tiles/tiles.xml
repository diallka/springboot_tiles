	<definition name="*" extends="baseLayout">
		<put-attribute name="body" value="/WEB-INF/jsp/vues/user/{1}.jsp" />
	</definition>
	
	<definition name="home" template="/WEB-INF/jsp/vues/home/index.jsp">
	</definition>
	
	
	<definition name="inscription" template="/WEB-INF/jsp/vues/authentification/inscription.jsp">
